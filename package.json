{
  "name": "gestion",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:clean": "npm run kill-ports && npm run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "kill-ports": "npx kill-port 3000 3001 4001",
    "clean": "npm run kill-ports && turbo run clean"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.5",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.5.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "firebase": "^12.9.0",
    "zod": "^4.3.6"
  }
}